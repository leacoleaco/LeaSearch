<UserControl
    x:Class="LeaSearch.UI.UserControls.NoticePanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="noticePanel"
    d:DesignHeight="300"
    d:DesignWidth="300"
    Visibility="Collapsed"
    mc:Ignorable="d">
    <DockPanel LastChildFill="True">
        <Image
            x:Name="PART_Icon"
            Width="20"
            Height="20"
            Margin="4,0"
            DockPanel.Dock="Left"
            Source="{Binding IconSource, ElementName=noticePanel}" />
        <StackPanel>
            <TextBlock
                x:Name="NoticeInfoTextBlock"
                Style="{DynamicResource NoticeInfoTextBlockStyle}"
                Text="{Binding InfoText, ElementName=noticePanel}"
                Visibility="Collapsed" />
            <TextBlock
                x:Name="NoticeErrorTextBlock"
                Style="{DynamicResource NoticeErrorTextBlockStyle}"
                Text="{Binding ErrorText, ElementName=noticePanel}"
                Visibility="Collapsed" />
        </StackPanel>
    </DockPanel>
</UserControl>
